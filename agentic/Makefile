# Agentic Makefile
.PHONY: all build test clean

# Default target
all: build

# Build the main server
build:
	@echo "ğŸ”¨ Building agentic server..."
	@go build -o agentic .
	@echo "âœ… Build successful! Run with: ./agentic"

# Run the audio streaming test
test-audio:
	@echo "ğŸ§ª Running audio streaming test..."
	@go run test_audio_streaming.go

# Clean build artifacts
clean:
	@echo "ğŸ§¹ Cleaning build artifacts..."
	@rm -f agentic
	@rm -f audio_chunk_*.bin
	@echo "âœ… Cleaned!"

# Run the server
run: build
	@echo "ğŸš€ Starting agentic server..."
	@./agentic

# Install dependencies
deps:
	@echo "ğŸ“¦ Installing Go dependencies..."
	@go mod tidy
	@echo "âœ… Dependencies installed!" 